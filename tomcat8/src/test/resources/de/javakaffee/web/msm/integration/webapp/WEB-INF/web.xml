<?xml version="1.0" encoding="UTF-8"?>
<web-app
        xmlns="http://xmlns.jcp.org/xml/ns/javaee"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
        version="3.1" metadata-complete="true">
    <display-name>IntegrationTest Application</display-name>
  
    <servlet>
        <servlet-name>TestServlet</servlet-name>
        <servlet-class>de.javakaffee.web.msm.integration.TestServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>TestServlet</servlet-name>
        <url-pattern>/*</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>de.javakaffee.web.msm.integration.LoginServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <!-- FIXME: temporary workaround: tomcat8 redirects form-auth to "//login"" instead of "/login" -->
        <servlet-name>login</servlet-name>
        <url-pattern>//login</url-pattern>
    </servlet-mapping>
</web-app>